doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Agile South West
    link(href="css/style.css", rel="stylesheet", type="text/css")
    link(href="//fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
  body
    .container
      .row
        .col-xs-12.header
          h1.title Agile South West
          img(src="images/agile-south-west-logo.png" class="logo")

      .row
        .col-md-4.action
          .action-inner
            h2 Join us on slack
            p Join our slack room and be a part of the conversation
            form(method="POST", action="/invite")#join-form.form
              <div class="form-group">
              <label for="email" class="title">Email address</label>
              <input type="email" name="email" class="form-control" id="slack-email" aria-describedby="emailHelp" placeholder="Enter email">
              </div>
              input(type="submit", value="Join").btn.btn-primary
        .col-md-4.action
          .action-inner
            h2 Upcomming events
            img(src="images/meetup.jpeg" alt="Agile South West onmeetup")
        .col-md-4.action
          .action-inner
            h2 Follow us on Twitter
            p this is some text
    script.
      var tokenRequired = #{tokenRequired};
      var form = document.getElementById('join-form');
      var email = document.getElementById('slack-email');
      var token = document.getElementById('slack-token');
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
        if (tokenRequired && !token.value) {
          evt.preventDefault();
        }
      });
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>